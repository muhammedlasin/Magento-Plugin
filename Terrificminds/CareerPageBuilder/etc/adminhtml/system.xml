<?xml version = "1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="Terrificminds" translate="label" sortOrder="10">
            <label>Terrificminds</label>
        </tab>
        <section id="career" translate="label" sortOrder="130"
         showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Career Page Builder</label>
            <tab>Terrificminds</tab>
            <resource>Terrificminds_CareerPageBuilder::terrificminds_careerpagebuilder</resource>
            <group id="general" translate="label" type="text"
             sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Configuration</label>
                <field id="enable" translate="label" type="select"
                 sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="adminName" translate="label" type="text"
                 sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Admin Name</label>
                    <comment>It will be used in email templates where admin name is required.</comment>
                </field>
                <field id="adminEmail" translate="label" type="text"
                 sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Admin Email</label>
                    <comment>The email entered in this field will get job application notifications.</comment>
                </field>
                <field id="template" translate="label" sortOrder="50"
                 showInDefault="1" showInWebsite="1" showInStore="1" type="select">
                    <label>Email Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
            </group>
        </section>
    </system>
</config>